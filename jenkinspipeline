pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = 'docker-hub' // Jenkins credentials ID for DockerHub
        IMAGE_NAME = 'myimage01'
        IMAGE_TAG = '1'
        DOCKERHUB_REPO = 'nikhil9823/myimage01'
    }

    stages {

        stage('Checkout Repo') {
            steps {
                git url: 'https://github.com/nikhil17-ng/Jenkins-python-Docker-demo', branch: 'master'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh "docker build -t ${IMAGE_NAME}:${IMAGE_TAG} ."
                }
            }
        }

        stage('Login to DockerHub') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: "${DOCKERHUB_CREDENTIALS}", 
                                                      passwordVariable: 'DOCKER_PASS', 
                                                      usernameVariable: 'DOCKER_USER')]) {
                        sh "echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin"
                    }
                }
            }
        }

        stage('Push Image') {
            steps {
                script {
                    sh "docker tag ${IMAGE_NAME}:${IMAGE_TAG} ${DOCKERHUB_REPO}:${IMAGE_TAG}"
                    sh "docker push ${DOCKERHUB_REPO}:${IMAGE_TAG}"
                }
            }
        }

        stage('Run Container') {
            steps {
                script {
                    sh "docker stop ${IMAGE_NAME} || true"
                    sh "docker rm ${IMAGE_NAME} || true"
                    sh "docker run -d -p 5000:5000 --name ${IMAGE_NAME} ${DOCKERHUB_REPO}:${IMAGE_TAG}"
                }
            }
        }

    }

    post {
        always {
            echo 'Pipeline finished.'
        }
        failure {
            echo 'Something went wrong! Check Docker permissions or build logs.'
        }
    }
}
